<Window x:Class="Шашки_по_городу.BoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Шашки_по_городу"
        mc:Ignorable="d"
        Title="Шашки по городу" Height="600px" Width="800px">
    <Grid x:Name="windowGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="560px"></ColumnDefinition>
            <ColumnDefinition Width="220px" ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Button 
            Grid.Column="1" 
            Grid.Row="0" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Top" 
            Click="NewGameButton_Click">
            <TextBlock Text="New Game"
                       FontSize="20"
                       Margin="5px"></TextBlock>
        </Button>
    </Grid>
</Window>
